{
    "name": "HelpLine",
    "description" : "'/ ' をomniboxに入力してHelpfeel検索する",
    "version": "1.5",
    "manifest_version": 2,
    "permissions": [
	"storage"
    ],
    "content_scripts": [
	{
	    "matches": [ "http://*/*", "https://*/*" ],
	    "js": [
		"jquery-2.1.4.min.js",
		"content_script_browserify.js"
	    ],
	    "run_at": "document_idle"
	}
    ],
    "background": {
	"scripts": [
	    "suggests.js",
	    "background.js"
	],
	"persistent": false
    },
    "omnibox": { "keyword" : "/" },
    "browser_action": {
	"default_icon": {
	    "16": "helpline.png"
	},
	"default_title": "Helpfeel登録"
    },
    "icons": {
	"16": "helpline.png",
	"32": "helpline-32.png",
	"96": "helpline-96.png"
    }
}
