{
    "name": "HelpLine",
    "description" : "To use, type '/ ' plus a search term into the Omnibox.",
    "version": "1.5",
    "manifest_version": 2,
    "permissions": [
	"storage"
    ],
    "content_scripts": [
	{
	    "matches": [ "https://scrapbox.io/*/*" ],
	    "js": [
		"content_script_browserify.js"
	    ],
	    "run_at": "document_idle"
	}
    ],
    "background": {
	"scripts": [
	    "suggests.js",
	    "background.js"
	],
	"persistent": false
    },
    "omnibox": { "keyword" : "/" },
    "browser_action": {
	"default_icon": {
	    "16": "helpline.png"
	},
	"default_title": "Helpfeel登録"
    },
    "icons": {
	"16": "helpline.png"
    },
    "options_page": "setting.html"
}
